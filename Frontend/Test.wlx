http                      =  $Options["HTTPUHandler"];

App[request_] := With[{
    SecretString = ToString[StringReverse[URLDecode[ request["Path"] ] ] ]
},

    <SecretString/>
];  

Ping[request_] := With[{}, "OK"];

http["MessageHandler", "Test"] = AssocUMatchQ[<|"Path" -> "/test"|>] -> App;
http["MessageHandler", "Ping"] = AssocUMatchQ[<|"Path" -> "/ping"|>] -> Ping;
Print["Test Loaded!"];




