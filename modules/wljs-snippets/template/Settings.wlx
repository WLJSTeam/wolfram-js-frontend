Checkbox = ImportComponent["UI/Checkbox.wlx"];
Knob     = ImportComponent["UI/Button.wlx"];

IfKeyExists[assoc_Association, list_List] := With[{},
    If[KeyExistsQ[assoc, #[[1]]], assoc[#[[1]]], #[[2]]] &/@ list
];

parseInt[any_String] := ToExpression[any]
parseInt[any_] := any 

setInHold[s_, val_] := Scan[Function[Null, # = val, HoldAll], s]
SetAttributes[setInHold, HoldFirst]

applyLibChanges[library_, hash_, state_, onsave_, log_] := With[{lib = ReleaseHold[library]},
With[{newLib = Join[lib, <|hash -> 
    Join[lib[hash], <|"enabled" -> state|>]    
|>]}, 
    setInHold[library, newLib];
    onsave[<|"AIAssistantLibraryStopList" -> (Select[Values @ newLib, Function[s, s["enabled"] === False]][[All, "title"]]) |>];
    EventFire[log, "Saved", "Type 'Reset chat' in the AI chat window to see changes"];
]];


generator[opts_Association] := With[{library = opts["Library"], defaultSystemPrompt = opts["DefaultAIAssistantAssistantPrompt"]}, Module[{Component},

    Component[OptionsPattern[]] := With[{
        update = CreateUUID[],
        libChange = CreateUUID[],
        settings = OptionValue["Settings"],
        log = OptionValue["Messager"],
        onsave = OptionValue["OnSave"],

        apiKey = Unique["llmAssistant"],
        LLMPromptInitial = Unique["llmAssistant"],
        LLMAssistantPromptInitial = Unique["llmAssistant"],

        initialValues = IfKeyExists[OptionValue["Settings"], {
            {"AIAssistantEndpoint", "https://api.anthropic.com"}, 
            {"AIAssistantModel", "claude-haiku-4-5-20251001"}, 
            {"AIAssistantMaxTokens", 100000}, 
            {"AIAssistantTemperature", 0.5},
            {"AIAssistantInitialPrompt", True},
            {"AIAssistantLibraryStopList", {}},
            {"AIAssistantAutocomplit", False},
            {"AIAssistantAutocomplitPrompt", Compress @ "Work as autocomplete program. User sends prompts with code snippets, ^^ indicates the cursor positions (do not reply with ^^, this is inserted only for you). Reply only with this completion expression (DO NOT ESCAPE, NO ``` markdown structures) starting from the cursor position and replacing the whole line or return empty string if completion is not needed (no code escaping is needed). Apply syntax/spelling corrections if needed or possible. Most used languages: Wolfram, JS, MD, HTML, plain text"},
            {"AIAssistantAutocomplitDelay", 400}
        }]
    },

        With[{
            rules = Table[With[{hash = hash}, hash -> Function[state, 
                applyLibChanges[library, hash, state, onsave, log]
            ]], {hash, Keys @ ReleaseHold[library]}]
        },
            EventHandler[libChange, rules]; (* /* going to leak ... */ *)
        ];

        LLMPromptInitial = Uncompress[initialValues[[8]] ];
        LLMAssistantPromptInitial = Uncompress @ Lookup[settings, "AIAssistantAssistantPrompt", Compress @ defaultSystemPrompt];

        EventHandler[update, {
            "ResetKey" -> Function[Null,
                SystemCredential["OPENAI_API_KEY"] = .;
                EventFire[log, "Saved", "Type 'reset chat' in the AI chat window to see changes"];
            ],

            "Prompt" -> Function[value,
                onsave[<|"AIAssistantInitialPrompt" -> URLDecode[value]|>];
                EventFire[log, "Saved", "Type 'reset chat' in the AI chat window to see changes"];
            ],

            "Endpoint" -> Function[value,
                onsave[<|"AIAssistantEndpoint" -> URLDecode[value]|>];
                EventFire[log, "Saved", "Type 'reset chat' in the AI chat window to see changes"];
            ],

            "Model" -> Function[value,
                onsave[<|"AIAssistantModel" -> URLDecode[value]|>];
                EventFire[log, "Saved", "Type 'reset chat' in the AI chat window to see changes"];
            ],

            "MaxTokens" -> Function[value,
                onsave[<|"AIAssistantMaxTokens" -> parseInt[value]|>];
                EventFire[log, "Saved", "Type 'reset chat' in the AI chat window to see changes"];
            ],

            "InputLag" -> Function[value,
                onsave[<|"AIAssistantAutocomplitDelay" -> parseInt[value]|>];
                EventFire[log, "Saved", "Restart an app to see changes"];
            ],

            "Temperature" -> Function[value,
                onsave[<|"AIAssistantTemperature" -> parseInt[value]|>];
                EventFire[log, "Saved", "Type 'reset chat' in the AI chat window to see changes"];
            ],

            "APIKey" -> Function[value,
                apiKey = StringTrim[URLDecode[value]];
            ],

            "SetKey" -> Function[Null,
                If[!StringQ[apiKey], Return[] ];
                SystemCredential["WLJSAI_API_KEY"] = StringTrim[apiKey];
                EventFire[log, "Saved", "Type 'reset chat' in the AI chat window to see changes or restart an app"];
            ],
            
            "Autocomplit" -> Function[value,
                onsave[<|"AIAssistantAutocomplit" -> parseInt[value]|>];
                EventFire[log, "Saved", "Restart an app to see changes"];
            ],

            "SystemPrompt" -> Function[value,
                Echo["Update:"];
                Echo[URLDecode[value]];
                LLMPromptInitial = StringTrim[URLDecode[value]];
                If[StringLength[LLMPromptInitial] == 0, LLMPromptInitial = initialValues[[8]]];

                onsave[<|"AIAssistantAutocomplitPrompt" -> Compress[LLMPromptInitial]|>];
                
                EventFire[log, "Saved", "Restart an app to see changes"];
            ],

            "SystemAssistantPrompt" -> Function[value,
                LLMAssistantPromptInitial = StringTrim[URLDecode[value]];
                If[StringLength[LLMAssistantPromptInitial] == 0, LLMAssistantPromptInitial = defaultSystemPrompt];
                
                onsave[<|"AIAssistantAssistantPrompt" -> Compress[LLMAssistantPromptInitial]|>];

                EventFire[log, "Saved", "Type 'reset chat' in the AI chat window to see changes or restart an app"];
            ]
        }];

      With[{
        LibraryTemplate = Table[With[{
            item = ReleaseHold[library][key]
        },
            <StringRiffle>
                <Checkbox Label={item["title"]} Event={libChange} Topic={key} Description={StringJoin["Word count ", item["words"]]} Checked={item["enabled"]}/>
            </StringRiffle>
        ] , {key, Keys[ReleaseHold @ library]}]
      },

        <li class="list-none px-0 py-4 sm:px-0">
            <div class="px-4 sm:px-0 pb-3 border-b border-gray-100">
                <h3 class="text-base font-semibold leading-7 text-gray-900 dark:text-gray-300">Command palette</h3>
                <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500 dark:text-gray-500"></p>
            </div>
            <div class="mt-4">   
                <span class="dark:text-gray-400">AI Assistant</span>
                <div class="block my-2 py-2">
                    <div class="rounded-md px-3 pb-3 pt-2.5 shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">
                        <label for="llm-prompt-assistant" class="block text-xs font-medium text-gray-900 dark:text-gray-400">System prompt</label>
                        <textarea type="text" id="llm-prompt-assistant" class="block w-full border-0 p-0 dark:bg-gray-700 text-gray-900 dark:text-gray-300 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6">
                            <LLMAssistantPromptInitial/>
                        </textarea>
                        <WebUIEventListener Id={"llm-prompt-assistant"} Pattern={"SystemAssistantPrompt"} Type={"blur"} Event={update}/>
                    </div>  
                </div> 
                <span class="dark:text-gray-400">General</span>           
                <div class="block my-2 py-2">
                    <div class="pb-10 pb-10 mt-5 gap-y-2 flex flex-col">
                        <div class="rounded-md px-3 pb-3 pt-2.5 shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">
                            <label for="api-key-field" class="block text-xs font-medium text-gray-900 dark:text-gray-400">API Key</label>
                            <input type="text" id="api-key-field" class="block w-full border-0 p-0 dark:bg-gray-700 text-gray-900 dark:text-gray-300 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="Paste here"/>
                            <WebUIEventListener Property={"value"} Id={"api-key-field"} Pattern={"APIKey"} Type={"blur"} Event={update}/>
                        </div> 
                        <Knob Label={"Set API Key"} Topic={"SetKey"} Event={update} Class={"w15"}/>
                    </div>  
                    <StringRiffle>
                        <Knob Label={"Remove API Key"} Topic={"ResetKey"} Event={update} Class={"w15"}/>
                    </StringRiffle>
                </div>
                <div class="pb-2 mt-2 gap-y-2 flex flex-col">
                    <div class="rounded-md px-3 pb-3 pt-2.5 shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">
                        <label class="block text-xs font-medium text-gray-900 dark:text-gray-400">AI Library</label>
                        <LibraryTemplate/>
                    </div>
                </div>
                <div class="pb-2 mt-2 gap-y-2 flex flex-col">
                    <div class="rounded-md px-3 pb-3 pt-2.5 shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">
                        <label for="endpoint" class="block text-xs font-medium text-gray-900 dark:text-gray-400">Endpoint</label>
                        <input type="text" id="endpoint" value="{initialValues[[1]]}" class="block w-full border-0 p-0 dark:bg-gray-700 text-gray-900 dark:text-gray-300 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="https://api.openai.com"/>
                        <WebUIEventListener Id={"endpoint"} Type={"blur"} Event={update} Pattern={"Endpoint"}/>
                    </div> 
                </div> 
                <div class="pb-2 mt-2 mt-5 gap-y-2 flex flex-col">
                    <div class="rounded-md px-3 pb-3 pt-2.5 shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">
                        <label for="Model" class="block text-xs font-medium text-gray-900 dark:text-gray-400">Model</label>
                        <input type="text" id="Model" value="{initialValues[[2]]}" class="block w-full border-0 p-0 dark:bg-gray-700 text-gray-900 dark:text-gray-300 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" value="" placeholder="gpt-4o"/>
                        <WebUIEventListener Id={"Model"} Type={"blur"} Event={update} Pattern={"Model"}/>
                    </div> 
                </div> 
                <div class="pb-2 mt-2 mt-5 gap-y-2 flex flex-col">
                    <div class="rounded-md px-3 pb-3 pt-2.5 shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">
                        <label for="MaxTokens" class="block text-xs font-medium text-gray-900 dark:text-gray-400">Max tokens</label>
                        <input type="number" value="{initialValues[[3]]}" min="1000" max="500000" step="1000" id="MaxTokens" class="block w-full border-0 p-0 dark:bg-gray-700 text-gray-900 dark:text-gray-300 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6"/>
                        <WebUIEventListener Id={"MaxTokens"} Type={"blur"} Event={update} Pattern={"MaxTokens"}/>
                    </div> 
                </div> 
                <div class="pb-10 pb-10 mt-5 gap-y-2 flex flex-col">
                    <div class="rounded-md px-3 pb-3 pt-2.5 shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">
                        <label for="Temperature" class="block text-xs font-medium text-gray-900 dark:text-gray-400">Temperature</label>
                        <input type="range" min="0.1" max="0.9" step="0.1" value="{initialValues[[4]]}" id="Temperature" class="block w-full border-0 p-0 dark:bg-gray-700 text-gray-900 dark:text-gray-300 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6"/>
                        <WebUIEventListener Id={"Temperature"} Type={"blur"} Event={update} Pattern={"Temperature"}/>
                    </div> 
                </div>                      
            </div> 
        </li>

      ]
    ];

    Component
]];

generator